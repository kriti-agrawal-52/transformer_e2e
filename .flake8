# .flake8
[flake8]
exclude =
    .git,
    __pycache__,
    .venv,
    env,
    venv,
    .mypy_cache,
    .pytest_cache,
    build,
    dist
ignore =
    E501,
    E203,
    W503

# Ignore known conflicts with Black formatting
# E203: Whitespace before ':' (e.g., slices) – Black prefers space
# W503: Line break before binary operator – Black enforces this style
# ignore the above error codes globally
max-line-length = 120
max-complexity = 10  